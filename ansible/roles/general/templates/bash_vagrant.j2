# shell layout
export CLICOLOR='true'
export PS1='\[\033[1;32m\]\h \[\033[1;37m\]\w \u \\$ '

export EDITOR='vim'

{% if application == 'symfony' %}
alias sf="./app/console"
alias sfcc="sf cache:clear"
alias sfai="sf assets:install --symlink"
alias sfad="sf assetic:dump"
alias sfaw="sf assetic:watch"
alias sfdsu="sf doctrine:schema:update --force --complete"
alias sfdsv="sf doctrine:schema:validate"
{% endif %}

cd /vagrant
